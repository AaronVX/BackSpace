<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_shuttle"
            android:drawablePadding="15dp"
            android:paddingVertical="30dp"
            android:text="Book a flight"/>


        <Button
            android:id="@+id/btn_track"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_telescope"
            android:drawablePadding="15dp"
            android:paddingVertical="30dp"
            android:text="Track flights" />

    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <Button
                android:id="@+id/btn_planets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:paddingVertical="30dp"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/ic_orbit"
                android:text="Browse Planets"
                />

            <Button
                android:id="@+id/btn_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:paddingVertical="30dp"
                android:text="" />
    </TableRow>
</TableLayout>